extends default

block content
  form(method='POST')
    input(name='_csrf' type='hidden' value=csrfToken)
    input(name='_numbers' type='hidden' value=numbers)
    p Correo electrónico
    input(name='email' required type='email' value=email)
    p Mensaje
    textarea(name='message' required type='text' value=message)
    p Verificación
    img(alt='Challenge' src=`data:image/jpeg;base64,${validationCode}`)
    input#challenge(name='challenge' required type='text')
    p
    button(type='submit') Enviar
