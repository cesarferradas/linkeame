extends default

block head
  meta(name='robots' content='noindex')

block content
  if !clickCount
    h4 ¡Tu enlace ha sido acortado!
  p Enlace original:
  p: a(href=longUrl) #{longUrl}
  p Enlace corto:
  p: a(href=`http://${shortUrl}`) #{shortUrl}
  p Número de clicks: <strong>#{clickCount}</strong>

block footer
  a(href='/') ← volver al inicio
